// Menu
// --------------------------------------------------
.menu {
  position: fixed;
  right: 0;
  display: flex;
  flex-direction: column;
  padding-left: 0;
  margin-top: 20px;
  text-align: center;
  +mobile() {
    position: unset;
  }
}

.menu-item {
  display: inline-block;
  list-style: none;
  margin: 0 10px;

  +mobile() {
    display: block;
    margin-top: 10px;

    &.menu-item-search {
      display: none;
    }
  }

  a, span.exturl {
    border-bottom: 0;
    display: block;
    font-size: $font-size-smaller;
    transition-property: border-color;
    the-transition();

    // To prevent hover on external links with touch devices after click.
    @media (hover: none) {
      &:hover {
        border-bottom-color: transparent !important;
      }
    }
  }

  .fa, .fab, .far, .fas {
    margin-right: 8px;
  }

  .badge {
    display: inline-block;
    font-weight: bold;
    line-height: 1;
    margin-left: .35em;
    margin-top: .35em;
    text-align: center;
    white-space: nowrap;

    +mobile() {
      float: right;
      margin-left: 0;
    }
  }
}

.menu-item-active a {
  background: var(--menu-item-bg-color);
}

.use-motion .menu-item {
  opacity: 0;
}
