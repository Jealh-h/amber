.site-nav-toggle, .site-nav-right {
  display: none;

  +mobile() {
    flex-column();
  }

  .toggle {
    color: var(--text-color);
    padding: 10px;
    width: 22px;

    .toggle-line {
      background: var(--text-color);
      border-radius: 1px;
    }
  }
}

.site-nav {
  display: block;

  +mobile() {
    clear: both;
    display: none;
  }

  &.site-nav-on {
    display: block;
  }
}

.theme-toggle {
  position: fixed;
  top: 20px;
  left: 20px;
  z-index 9999;
  cursor: url(https://qc9c5f.file.qingfuwucdn.com/file/1a235e6b0aef50a5_1644652113970.cur), pointer !important;
}
